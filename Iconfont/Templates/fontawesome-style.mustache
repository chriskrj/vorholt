<html xmlns="http://www.w3.org/1999/xhtml" lang="en"
      xmlns:f="http://typo3.org/ns/TYPO3/Fluid/ViewHelpers"
      xmlns:v="http://typo3.org/ns/FluidTYPO3/Vhs/ViewHelpers"
      xmlns:flux="http://typo3.org/ns/FluidTYPO3/Flux/ViewHelpers" data-namespace-typo3-fluid="true">

<f:section name="Example">
  <style>
    .sg-icons {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
    }

    .sg-icon {
      display: block;
      padding: 0;
      margin: 0 16px 24px 0;
      width: 128px;
      border-radius: 4px;
      position: relative;
      overflow: hidden;
      box-shadow: 0 2px 6px rgba(0,0,0,0.24);
    }

    .sg-icon-font {
      background-color: #e7e7e7;
      width: 100%;
      display: block;
      text-align: center;
      font-size: 128px;
      line-height: 1;
    }

    .sg-icon-data {
      padding: 8px;
      display: block;
    }

    .sg-icon-name {
      font-size: .8em;
      display: block;
      font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
      font-weight: bold;
      line-height: 1;
      margin-bottom: 8px;
    }

    .sg-icon-codepoint {
      font-size: .8em;
      display: block;
      font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
      font-style: italic;
      line-height: 1;
    }
  </style>
  <f:render partial="Styleguide/Headline" section="Headline" arguments="{title:'Iconfont'}"/>
  <div class="u-container">
    <div class="u-limitWidth-12 u-align-center u-marginBottom--r4">

      <ul class="sg-icons"><% _.each(glyphs, function(glyph) { %>
        <li class="sg-icon">
          <i class="sg-icon-font <%= className %> <%= className %>-<%= glyph.name %>"></i>
          <div class="sg-icon-data">
            <span class="sg-icon-name"><%= glyph.name %></span>
            <span class="sg-icon-codepoint"><%= glyph.codepoint.toString(16).toUpperCase() %></span>
          </div>
        </li><% }); %>
      </ul>

    </div>
  </div>
</f:section>

</html>




